{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "all",
	"printWidth": 100,
	"bracketSpacing": true,
	"plugins": ["prettier-plugin-tailwindcss"],
	"tailwindFunctions": ["tv"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"]
			}
		}
	]
}
